<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <ImageView
        android:src="@drawable/tectoy_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/imageView1" />
  
    <EditText
        android:text="Texto para imprimir"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtImprimir" />
    <Button
        android:text="Imprimir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnImprimir" />
    <TextView
        android:text="Retorno NFC"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtValorNFC" />
    <EditText
        android:text="Escrever no NFC"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEscreverNFC" />
    <Button
        android:text="Escrever NFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEscreverNFC" />
</LinearLayout>